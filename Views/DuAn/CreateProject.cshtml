@{
    ViewData["Title"] = "Create New Project";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create New Project</title>
    <link rel="stylesheet" href="~/css/createproject.css" />
</head>

<body>
    <div class="container">
        <!-- Sidebar -->
        <div class="sidebar">
            <a href="#" target="_self">
                <img src="~/images/chat.png" alt="Chat" width="40" height="40" />
            </a>
            <a href="/CTy/Index" target="_self">
                <img src="~/images/project.png" alt="Project" width="40" height="40" />
            </a>
            <a href="#" target="_self">
                <img src="~/images/profile.png" alt="Profile" width="40" height="40" />
            </a>
            <a href="/Login/Logout" target="_self">
                <img src="~/images/setting.png" alt="Setting" width="40" height="40" />
            </a>
        </div>

        <!-- Main Content Area -->
        <div class="main-content">
            <h2>Create New Project</h2>

            <form asp-action="CreateProject" method="post">
                <div class="form-group">
                    <label for="TenDuAn">Project Name:</label>
                    <input type="text" id="TenDuAn" name="tenDuAn" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="NoiDungDuAn">Project Description:</label>
                    <textarea id="NoiDungDuAn" name="noiDungDuAn" class="form-control" required></textarea>
                </div>
                <input type="hidden" name="maCongTy" value="@ViewBag.MaCongTy" />
                <button type="submit" class="btn btn-primary">Create Project</button>
            </form>
        </div>
    </div>
</body>

</html>
